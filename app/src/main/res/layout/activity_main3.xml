<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="liam.toptrumpsapp.MainActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateable_txt3"
        android:textSize="24sp"
        android:layout_below="@+id/updateable_txt"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:text="Button"
        android:layout_width="400sp"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:textSize="12sp"
        android:width="0dip"
        android:onClick="onClickHandler3"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:text="Button"
        android:layout_width="400sp"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:textSize="12sp"
        android:width="0dip"
        android:onClick="onClickHandler5"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:text="Button"
        android:layout_width="400sp"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:textSize="12sp"
        android:width="0dip"
        android:onClick="onClickHandler7"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <Button
        android:text="Button"
        android:layout_width="400sp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textSize="12sp"
        android:width="0dp"
        android:onClick="onClickHandler2"
        android:layout_below="@+id/updateable_txt3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Button"
        android:layout_width="400sp"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:textSize="12sp"
        android:width="0dip"
        android:onClick="onClickHandler6"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Welcome to Top Trumps!"
        android:id="@+id/updateable_txt"
        android:minHeight="8dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="28sp" />

    <Button
        android:text="Button"
        android:layout_width="400sp"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:textSize="12sp"
        android:width="0dip"
        android:onClick="onClickHandler4"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>